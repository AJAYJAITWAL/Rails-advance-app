<h1>Users</h1>
<%= link_to "Add user", new_user_path %>
<% @users.each do |user| %>
    <h6><%= user.name%></h6>
    <h6><%= user.email%></h6>
    <h6><%= user.phone%></h6>
    <h6><%= user.address%></h6>
    <%= link_to "Edit", edit_user_path(user) %>
    <%= link_to "Show", user_path(user) %>
    <%= link_to "Delete", user_path(user),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>
    <hr>
    <br>
<% end %>